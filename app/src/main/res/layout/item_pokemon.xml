<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/allCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_container_pokemon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@id/allCard"
        app:layout_constraintTop_toTopOf="@id/allCard"
        app:layout_constraintBottom_toBottomOf="@id/allCard"
        app:layout_constraintStart_toStartOf="@id/allCard"
        android:background="@drawable/round_square"
        android:layout_margin="1dp"/>
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/allCard"
        app:layout_constraintTop_toTopOf="@id/allCard"
        app:layout_constraintBottom_toBottomOf="@id/allCard"
        android:layout_margin="25dp"/>

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_pokemon"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintTop_toTopOf="@id/allCard"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        app:layout_constraintBottom_toBottomOf="@id/allCard"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/ic_vector_arrow_right"
        app:layout_constraintEnd_toEndOf="@id/allCard"
        app:layout_constraintTop_toTopOf="@id/allCard"
        app:layout_constraintBottom_toBottomOf="@id/allCard"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>